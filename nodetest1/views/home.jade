extends basetemplate

block header
  link(rel='stylesheet', href='/stylesheets/home.css')
  script(src='/js/lib/quill.js')

block content
  div(class='controlbox')
    div(class='search-line')
      input(id='search-input', type='text', placeholder='search your notes')
      // img(id='search-icon', class='button' src='/images/searchicon.jpg')
    div(id='label-title-popup')
      input(id='label-title-input')
      a(id='label-title-enter', class='button', href='javascript:void(0);') ok

    div(class='button-line')
      a(id='new-note', class='button', href='javascript:void(0);') new note
      a(id='new-label', class='button', href='javascript:void(0);') new label

    div(class='tree-container')
      ul(class='tree-list')
      //
        li(class='label')
          ul(class='inner-list')
            li(class='note')

  div(class='mainbox')
    div(class='editor-header')
      input(id='note-title-input', type='text' placeholder='title')
      img(class='clear-icon', src='')

    div(id='quill-toolbar')
      button(class='sc-bold') B
      button(class='sc-italic') I

    div(id='editor')

    div(class='editor-footer')
      div(class='bottom-bar')
        input(id='tag-input', type='text', placeholder='#tag #your #notes')
        select(id='label-select')
        a(id='save-note-button', class='button', href='javascript:void(0);') save

block scripts
  script(src='/js/quillconfig.js')
  script(src='/js/notebook.js')
    